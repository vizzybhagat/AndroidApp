<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vizzy.bmicalculator.SecondActivity">


    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvData"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="43dp"
        android:text="Enter your height"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spnFeet"
        android:layout_alignRight="@+id/spnFeet"
        android:layout_below="@+id/tvHeight"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="17dp"
        android:text="Feet"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spnFeet"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvInch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/tvFeet"
        android:layout_toEndOf="@+id/tvHeight"
        android:layout_toRightOf="@+id/tvHeight"
        android:text="Inch" />

    <Spinner
        android:id="@+id/spnInch"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/spnFeet"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spnFeet"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="39dp"
        android:text="Enter your weight in kgs" />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:hint="Enter weight "
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWeight"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spnInch"
        android:layout_alignRight="@+id/spnInch"
        android:layout_below="@+id/etWeight"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="calculate" />

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spnFeet"
        android:layout_alignRight="@+id/spnFeet"
        android:layout_alignTop="@+id/btnCalculate"
        android:text="View History" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvData"
        android:layout_marginTop="12dp"
        android:text="" />


</RelativeLayout>
